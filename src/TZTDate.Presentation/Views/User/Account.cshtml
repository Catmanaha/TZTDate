@model User

@{
    ViewData["Title"] = "Account";
    string? imageError = (string?)TempData["ImageError"];
}

@if (imageError is not null) {
    <span class="text-danger">@imageError</span>
}

<div class="text-danger" asp-validation-summary="All"></div>
<form enctype="multipart/form-data" asp-action="UploadAvatar" asp-controller="User" method="post" class="account-form">
    <img src="~/Assets/@Model.ProfilePicPath" alt="profile img">
    <input type="file" name="file" id="file">
    <button>Save Changes</button>
</form>

<style>
    .account-form {
        display: flex;
        flex-direction: column;
        width: 300px;
        gap: 30px;
    }

    .account-form img {
        width: 300px;
        height: 300px;
        border-radius: 10px;
    }

    .account-form button {
        border: none;
        border-radius: 10px;
        color: #fff;
        background-color: green;
        padding: 12px 5px;
    }

    .account-form button:hover {
        background-color: darkgreen;
    }
</style>